<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="16dp"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


    <TextView
            android:id="@+id/typeSalon"
            tools:text = "Барбершоп"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/nameSalon"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            tools:text="Шик by nail Almaty"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/imageSalon"
            android:layout_width="match_parent"
            android:src="@drawable/bg_collapsing"
            android:scaleType="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_height="200dp"/>

    <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            tools:text="asdfasdf asdf asdf as asdf asdf asdf asdf asdf asdfasdf asdf df asdf asdf "
            android:layout_height="wrap_content"/>

</LinearLayout>


</android.support.v7.widget.CardView>